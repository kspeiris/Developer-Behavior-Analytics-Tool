{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "electron"
    ]
  },
  "include": [
    "electron/**/*.ts",
    "electron/**/*.cts"
  ]
}